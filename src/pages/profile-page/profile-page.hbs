<main id="profile" class="profile">
  {{> Avatar
    className="avatar_big profile__avatar"
    imgSrc=""
  }}

  {{> Header
    className="profile__header"
    text="Иван"
  }}

  {{#> Form className="profile__form" }}
    <div class="profile__form-controls">
      {{> FormControl
        className="profile__form-control"
        classNameLabel="profile__label"
        classNameInput="profile__input"
        classNameError="profile__error"
        name="email"
        labelText="Почта"
        type="email"
        value="pochta@yandex.ru"
        errorText="Неверная почта"
        disabled="disabled"
      }}

      {{> FormControl
        className="profile__form-control"
        classNameLabel="profile__label"
        classNameInput="profile__input"
        classNameError="profile__error"
        name="login"
        labelText="Логин"
        type="text"
        value="ivanivanov"
        errorText="Неверный логин"
        disabled="disabled"
      }}

      {{> FormControl
        className="profile__form-control"
        classNameLabel="profile__label"
        classNameInput="profile__input"
        classNameError="profile__error"
        name="first_name"
        labelText="Имя"
        type="text"
        value="Иван"
        errorText="Неверное имя"
        disabled="disabled"
      }}

      {{> FormControl
        className="profile__form-control"
        classNameLabel="profile__label"
        classNameInput="profile__input"
        classNameError="profile__error"
        name="second_name"
        labelText="Фамилия"
        type="text"
        value="Иванов"
        errorText="Неверная фамилия"
        disabled="disabled"
      }}

      {{> FormControl
        className="profile__form-control"
        classNameLabel="profile__label"
        classNameInput="profile__input"
        classNameError="profile__error"
        name="chat_name"
        labelText="Имя в чате"
        type="text"
        value="Иван"
        errorText="Неверное имя в чате"
        disabled="disabled"
      }}

      {{> FormControl
        className="profile__form-control"
        classNameLabel="profile__label"
        classNameInput="profile__input input_error"
        classNameError="profile__error error_visible"
        name="phone"
        labelText="Телефон"
        type="tel"
        value="+7(909)967-30-30"
        errorText="Неверный телефон"
      }}

      {{> FormControl
        className="profile__form-control"
        classNameLabel="profile__label"
        classNameInput="profile__input"
        classNameError="profile__error"
        name="old_password"
        labelText="Старый пароль"
        type="password"
        value="1234567891011121"
        errorText="Пароли не совпадают"
        disabled="disabled"
      }}

      {{> FormControl
        className="profile__form-control"
        classNameLabel="profile__label"
        classNameInput="profile__input"
        classNameError="profile__error"
        name="new_password"
        labelText="Новый пароль"
        type="password"
        value="1234567891011121"
        errorText="Пароли не совпадают"
        disabled="disabled"
      }}

      {{> FormControl
        className="profile__form-control"
        classNameLabel="profile__label"
        classNameInput="profile__input"
        classNameError="profile__error"
        name="new_password_again"
        labelText="Повторите пароль ещё раз"
        type="password"
        value="1234567891011122"
        errorText="Пароли не совпадают"
        disabled="disabled"
      }}
    </div>

    <div class="profile__buttons">
      {{#> Button
        className="profile__button"
        type="button"
      }}
        Изменить данные
      {{/ Button }}

      {{#> Button
        className="profile__button"
        type="button"
      }}
        Изменить пароль
      {{/ Button }}
    </div>
  {{/ Form }}

  {{> Link
    className="profile__footer"
    href="/"
    text="Выйти"
  }}
</main>
