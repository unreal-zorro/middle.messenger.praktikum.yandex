<main id="register" class="login register">
  {{> Header
    className="login__header"
    text="Регистрация"
  }}

  {{#> Form className="login__form" }}
    <div class="login__form-controls">
      {{> FormControl
        className="login__form-control"
        classNameLabel="login__label"
        classNameInput="login__input"
        classNameError="login__error"
        name="email"
        labelText="Почта"
        type="email"
        value="pochta@yandex.ru"
        errorText="Неверная почта"
      }}

      {{> FormControl
        className="login__form-control"
        classNameLabel="login__label"
        classNameInput="login__input"
        classNameError="login__error"
        name="login"
        labelText="Логин"
        type="text"
        value="ivanivanov"
        errorText="Неверный логин"
      }}

      {{> FormControl
        className="login__form-control"
        classNameLabel="login__label"
        classNameInput="login__input"
        classNameError="login__error"
        name="first_name"
        labelText="Имя"
        type="text"
        value="Иван"
        errorText="Неверное имя"
      }}

      {{> FormControl
        className="login__form-control"
        classNameLabel="login__label"
        classNameInput="login__input"
        classNameError="login__error"
        name="second_name"
        labelText="Фамилия"
        type="text"
        value="Иванов"
        errorText="Неверная фамилия"
      }}

      {{> FormControl
        className="login__form-control"
        classNameLabel="login__label"
        classNameInput="login__input"
        classNameError="login__error"
        name="phone"
        labelText="Телефон"
        type="tel"
        value="+7(909)967-30-30"
        errorText="Неверный телефон"
      }}

      {{> FormControl
        className="login__form-control"
        classNameLabel="login__label"
        classNameInput="login__input input_error"
        classNameError="login__error error_visible"
        name="password"
        labelText="Пароль"
        type="password"
        value="1234567891011121"
        errorText="Пароли не совпадают"
      }}

      {{> FormControl
        className="login__form-control"
        classNameLabel="login__label"
        classNameInput="login__input input_error"
        classNameError="login__error error_visible"
        name="password_again"
        labelText="Пароль (ещё раз)"
        type="password"
        value="1234567891011122"
        errorText="Пароли не совпадают"
      }}
    </div>

    {{#> Button
      className="login__button"
      type="submit"
    }}
      <a
        class="login__link"
        href="chats"
      >
        Зарегистрироваться
      </a>
    {{/ Button }}
  {{/ Form }}

  {{> Link
    className="login__footer"
    href="/"
    text="Войти"
  }}
</main>
