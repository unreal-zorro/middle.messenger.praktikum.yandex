<section
  class="search{{#if className}} {{ className }}{{/if}}"
>
  {{> Link this.navLink
    className="search__link"
    href=this.navLink.href
    text=this.navLink.text
  }}

  {{#> Form className="search__form" }}
    <div class="search__form-controls">
      {{#each controls}}
        <div class="search__form-control">
          <svg class="search__icon">
            <use xlink:href="#icon-search"></use>
          </svg>

          <svg class="spritesheet">
            <symbol id="icon-search" viewBox="0 0 32 32">
              <title>search</title>
              <path d="M27.414,24.586l-5.077-5.077C23.386,17.928,24,16.035,24,14c0-5.514-4.486-10-10-10S4,8.486,4,14  s4.486,10,10,10c2.035,0,3.928-0.614,5.509-1.663l5.077,5.077c0.78,0.781,2.048,0.781,2.828,0  C28.195,26.633,28.195,25.367,27.414,24.586z M7,14c0-3.86,3.14-7,7-7s7,3.14,7,7s-3.14,7-7,7S7,17.86,7,14z" />
            </symbol>
          </svg>

          {{> InputField
            className="search__input-field"
            classNameLabel=""
            classNameInput="search__input"
            classNameError="search__error"
            name=this.name
            label=this.label
            type=this.type
            disabled=this.disabled
            placeholder=this.placeholder
            value=this.value
            error=this.error
          }}
        </div>
      {{/each}}
    </div>
  {{/ Form }}
</section>

