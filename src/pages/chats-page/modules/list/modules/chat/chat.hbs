<li
  class="chat{{#if className}} {{ className }}{{/if}}"
  id="chat{{ this.id }}"
>
  {{> Avatar
    className="chat__avatar avatar_no-edit"
    imgSrc=this.avatar
  }}

  <div class="chat__content">
    <div class="chat__info">
      <h2 class="chat__name">
        {{ this.title }}
      </h2>
      
      {{> Text
        className="chat__date"
        text=this.date
      }}
    </div>

    <div class="chat__message">
      {{> Text
        className="chat__text"
        text=this.text
      }}

      {{> Text
        className="chat__count"
        text=this.count
      }}
    </div>
  </div>

  <button
    class="chat__settings-button button"
    type="button"
  >
    <svg class="chat__settings-icon">
      <use xlink:href="#icon-settings"></use>
    </svg>
  </button>
</li>
